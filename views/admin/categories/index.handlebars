
<div class="row">
    <div class="col-sm-4">
        <h1> Create categories</h1>
        <form action="/admin/categories/create" method="POST">
         <div class="form-group">
             <label for="name">name</label>
             <input type="text" name="name" id="name" class="form-control">
         </div>
         <button type="submit" class="btn btn-primary">Create a Category</button>
        </form>
          <br>
    <br>
    </div>
    <hr>
    <div class="col-sm-10">
        <h1>Current Categories</h1>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td>{{formatDate date "MMMM Do YYYY"}} at {{formatDate  date "LT"}}</td>
                    <td> <a href="/admin/categories/edit/{{_id}}" class="btn btn-info">Edit</a> </td>
                    <td>
                        <form action="/admin/categories/{{_id}}?method=DELETE" method="post"><input type="submit" class="btn btn-danger" value="Delete"></form>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>