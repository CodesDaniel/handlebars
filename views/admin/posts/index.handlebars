<h1> All Posts</h1>

<table class="table table-bordered">
   <thead>
       <tr>
        <th>Id</th>
        <th>Title</th>
        <th>Allow Comment</th>
        <th>Staus</th>
       </tr>
   </thead>
    <tbody>
        {{#each posts}}
       <tr>
        <td>{{_id}}</td>
        <td>{{title}}</td>
        <td>{{allowComments}}</td>
        <td>{{status}}</td>
        <td><a class="btn btn-primary" href="/admin/posts/edit/{{_id}}">Edit </a></td>
       </tr>
       {{/each}}
    </tbody>
</table>